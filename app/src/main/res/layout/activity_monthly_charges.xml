<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyCharges">


    <TextView
        android:id="@+id/tvPriceHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price &amp; Planning "
        android:layout_margin="30dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E287A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceHeading"
        >


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="$0/month" />

        <TextView
            android:id="@+id/tvBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            />

        <ImageView
            android:id="@+id/approvalId1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd" />

        <TextView
            android:id="@+id/tvOffer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="35dp"
            android:text="Limited Access" />

        <ImageView
            android:id="@+id/approvalId2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd"
            />

        <TextView
            android:id="@+id/tvOffer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="35dp"
            android:text="5 Profile Visits" />

        <ImageView
            android:id="@+id/approvalId3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd" />

        <TextView
            android:id="@+id/tvOffer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="35dp"
            android:text="Chat Securely" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:text="Choose Plan" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E287A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"
        >


        <TextView
            android:id="@+id/tvPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="$55/month" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#D09FCD"
            android:textColor="@color/black"
            android:text="Most Popular"/>

        <TextView
            android:id="@+id/tvPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Premium"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice2"
            />

        <ImageView
            android:id="@+id/approvalId4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd" />

        <TextView
            android:id="@+id/tvOffer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="35dp"
            android:text="Limited Access" />

        <ImageView
            android:id="@+id/approvalId5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd"
            />

        <TextView
            android:id="@+id/tvOffer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="35dp"
            android:text="Unlimited Access" />

        <ImageView
            android:id="@+id/approvalId6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/abcd" />

        <TextView
            android:id="@+id/tvOffer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="35dp"
            android:text="Chat Securely" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:text="Choose Plan" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
