<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ArrowBackward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:src="@drawable/baseline_arrow_back_ios_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit a Request"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginLeft="30dp"
            android:text="Your Email Address"
            android:padding="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supportbg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:boxStrokeColor="@android:color/black">

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="match_parent"
                android:hint=""
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Your First Name"
            android:layout_marginLeft="30dp"
            android:textSize="24dp"
            android:padding="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/supportbg"
            android:padding="2dp">

            <EditText
                android:id="@+id/firstNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:backgroundTint="@android:color/transparent"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Register Mobile Number"
            android:layout_marginLeft="30dp"
            android:textSize="24dp"
            android:padding="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supportbg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/mobileNumberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:backgroundTint="@android:color/transparent"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="How can you help you?*"
            android:layout_marginLeft="30dp"
            android:textSize="24dp"
            android:padding="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supportbg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/helpField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:backgroundTint="@android:color/transparent"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Description"
            android:layout_marginLeft="30dp"
            android:textSize="24dp"
            android:padding="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supportbg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="2dp">

            <EditText
                android:id="@+id/descriptionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:minLines="3"
                android:backgroundTint="@android:color/transparent"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the details of your request. A member of our support staff will respond as soon as possible"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/attachmentTextView"
            android:text="No file selected"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/addFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Add File or Drop file here"
            android:textColor="@color/purple_500" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:backgroundTint="#E13023"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
