<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EADDDD"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"
                android:id="@+id/guide1"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"
                android:id="@+id/guide2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/pu"
                app:layout_constraintStart_toStartOf="@id/guide1"
                app:layout_constraintEnd_toEndOf="@id/guide2"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/vector"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="130dp"
                android:src="@drawable/baseline_mode_edit_24"
                app:layout_constraintEnd_toEndOf="@id/guide2"
                app:layout_constraintTop_toTopOf="@id/profileimage"/>

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/profileimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/getverified"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/verifyy"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:gravity="center"
                android:text="Get Verified"
                android:textSize="25sp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/firstNameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/editprofile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/pencil"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:gravity="center"
                android:text="Edit Profile"
                android:paddingStart="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/getverified"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/yourLikes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/love48"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:gravity="center"
                android:text="Your Likes"
                android:paddingStart="7dp"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editprofile" />

            <TextView
                android:id="@+id/instagra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/instagram"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:gravity="center"
                android:text="Instagram"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/yourLikes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/helpCenterTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/help"
                android:drawableRight="@drawable/baseline_navigate_next_24"
                android:gravity="center"
                android:text="Help Center"
                android:paddingStart="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/instagra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/myButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dark  Crush"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="#F25081"
                android:fontFamily="@font/inter"
              android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/helpCenterTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/king"
                app:layout_constraintTop_toBottomOf="@+id/helpCenterTextView"
                app:layout_constraintEnd_toEndOf="@id/myButton"
                android:elevation="5dp"
                android:layout_marginEnd="-15dp"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
